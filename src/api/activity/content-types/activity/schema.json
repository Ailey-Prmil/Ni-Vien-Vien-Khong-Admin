{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activity"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "activityName": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "activityName"
    },
    "content": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "coverImage": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "activityCategory": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true,
      "default": "Phật Sự Trong Nước",
      "enum": [
        "Phật Sự Trong Nước",
        "Phật Sự Nước Ngoài",
        "Lớp Học Phật Pháp",
        "Tin Tức Khác",
        "Khóa Tu"
      ]
    },
    "registrationLimit": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true,
      "default": 0
    },
    "ageRestricted": {
      "type": "boolean",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "default": false
    },
    "minAge": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "ageRestricted"
            },
            true
          ]
        }
      }
    },
    "maxAge": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "ageRestricted"
            },
            true
          ]
        }
      }
    },
    "activityStartDate": {
      "type": "date",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "activityEndDate": {
      "type": "date",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false
    },
    "courseContent": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "activityCategory"
            },
            "Khóa Tu"
          ]
        }
      },
      "component": "course-detail.course",
      "repeatable": false
    },
    "relatedActivities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::activity.activity",
      "mappedBy": "activity"
    },
    "activity": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::activity.activity",
      "inversedBy": "relatedActivities"
    },
    "activityRegistrations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::activity-registration.activity-registration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isEvent"
            },
            true
          ]
        }
      },
      "mappedBy": "registeredActivity"
    },
    "registrationForm": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "form-component.form-template",
      "repeatable": false
    }
  }
}
