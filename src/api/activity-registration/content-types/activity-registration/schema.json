{
  "kind": "collectionType",
  "collectionName": "activity_registrations",
  "info": {
    "singularName": "activity-registration",
    "pluralName": "activity-registrations",
    "displayName": "ActivityRegistration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "fullName": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true,
      "regex": "^(?:0\\d{9}|\\+\\d{1,3}\\s?\\d{7,12})$"
    },
    "email": {
      "type": "email",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true
    },
    "address": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "registrationStatus": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": ""
            },
            ""
          ]
        }
      },
      "required": false,
      "default": "active",
      "enum": ["active", "pending", "canceled"]
    },
    "confirmed": {
      "type": "boolean",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "registrationStatus"
            },
            "active"
          ]
        }
      },
      "required": false,
      "default": false
    },
    "confirmationToken": {
      "type": "string",
      "private": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "registrationStatus"
            },
            "active"
          ]
        }
      }
    },
    "registeredActivity": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::activity.activity",
      "inversedBy": "activityRegistrations"
    }
  }
}
