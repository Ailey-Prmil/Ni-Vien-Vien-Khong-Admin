{
  "kind": "collectionType",
  "collectionName": "user_questions",
  "info": {
    "singularName": "user-question",
    "pluralName": "user-questions",
    "displayName": "UserQuestion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "fullName": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true
    },
    "email": {
      "type": "email",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "private": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false,
      "regex": "^(?:0\\d+|\\+\\d[\\d ]*)$"
    },
    "address": {
      "type": "string",
      "private": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": false,
      "unique": false
    },
    "title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "questionContent": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "questionStatus": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "answered",
        "rejected"
      ]
    },
    "videoResponseContent": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "questionStatus"
            },
            "answered"
          ]
        }
      },
      "component": "response.video-response",
      "repeatable": false
    },
    "blogResponseContent": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "questionStatus"
            },
            "answered"
          ]
        }
      },
      "component": "response.blog-response",
      "repeatable": false
    }
  }
}
